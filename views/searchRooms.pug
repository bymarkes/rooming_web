// ===== INNERPAGE-WRAPPER ====
section.innerpage-wrapper(style='background-color: #f1f2f2;')
  #team-page.innerpage-section-padding
    .container
      .row
        .col-sm-12
          .page-search-form
            h2
                i.fa.fa-cogs(style='margin-right: 20px;')
                | Paràmetres 
            form#searchForm.pg-search-form(method='POST', action='/search')
                .row
                  .col-xs-12.col-sm-12.col-md-12.col-lg-12
                    .row
                      .col-xs-12.col-sm-12.col-md-12
                        .form-group.right-icon
                            label PROVINCIA
                            select#provincia.form-control(name='Provincia')
                                option(value='Barcelona') Barcelona
                                option(value='Lleida') Lleida
                                option(value='Girona') Girona
                                option(value='Tarragona') Tarragona
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                            label Categoria
                            select#categoria.form-control(name='Categoria')
                                each categoria in categories
                                  if categoria.id == category
                                    option(selected='',value=categoria.id) #{categoria.Titol}
                                  else
                                     option(value=categoria.id) #{categoria.Titol}                                                     
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                            label Participants
                            select#participants.form-control(name='Participants')
                                option(value='2') 2
                                option(value='4') 4
                                option(value='6') 6
                                option(value='10') 10                
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                          label Preu
                          br
                          br                          
                          input#range.slider-input(name='Preu', value=preu)
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                          label Valoració
                          #example
                          input#inputVal(name='Valoracio',type='hidden')
                      // end columns
                    // end row
                  // end columns
                  .col-xs-12.col-sm-12.col-md-12.col-lg-12.search-btn
                    button.btn.btn-orange(type='submit') Cerca
                  // end columns
                // end row
          .row          
            each room in rooms
              .col-xs-12.col-sm-6.col-md-4.col-lg-4
                .member-block-2.text-center(style='background-color: white;')
                  .member-img-2
                    each foto in fotos
                      if foto.room_id == room.id && foto.principal
                        img.img-responsive(src=foto.URL, alt='roomscape-img')
                    .member-name-2
                      h3 #{room.Nom}
                    // end member-name-2
                  // end member-img-2
                  .member-info-2
                    p
                      |#{room.Descripcio}
                    a.myButton(href='/room/'+room.id) Veure
                  // end member-info-2
                // end member-block-2
              // end columns
          // end row
        // end columns
      // end row
    // end container
  // end team-page
// end innerpage-wrapper

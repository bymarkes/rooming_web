script.
   $(function() {
    $('#example').rateYo({
      rating: #{valoracio},
      fullStar: true
    });
    $('#searchForm').submit(function (){
      var valoracio = $('#example').rateYo('rating');
      $('#inputVal').val(valoracio);
    });
    $("#provincia > option").each(function() {
      if(this.value == '#{provincia}'){
        $(this).attr('selected',true);
      }
    });
    
    $("#participants > option").each(function() {
      if(this.value == #{participants}){
        $(this).attr('selected',true);
      }
    });
  });

script.
  $(function() {
    $('.slider-input').jRange({
      from: 0,
      to: 60,
      step: 1,
      scale: [0,10,20,30,40,50,60],
      format: '%s',
      width: 500,      
      showLabels: true,
      isRange : true,
    });
  });
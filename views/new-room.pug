// ========================= FLEX SLIDER =====================
section.innerpage-wrapper(style='background-color: #f1f2f2;')
  #flight-booking.innerpage-section-padding
    .container
      .row
        .col-xs-12.col-sm-12.col-md-7.col-lg-12.content-side(style='background-color: #fafafa; padding: 20px;')
          form.lg-booking-form(action="/room/new", method="POST", enctype="multipart/form-data")
            .lg-booking-form-heading
              span
                i.fa.fa-info
              h3 Informació Room
            // end lg-bform-heading
            .personal-info
              .row
                .col-xs-6.col-sm-6
                  .form-group
                    label Nom del Room Scape
                    input.form-control(type='text', name="Nom", required='')
                // end columns
                .col-xs-6.col-sm-6
                  .form-group
                    label Preu en €
                    input.form-control(type='number', name="Preu", min='0', max='99' required='')
                // end columns
              // end row
              .row
                .col-sm-6
                  .form-group
                    label Persones
                    input.form-control(type='number', name="Persones",  required='')
                // end columns
                .col-sm-6
                  .form-group
                    label Duració en minuts
                    input.form-control(type='number', name="Duracio", required='')
                // end columns
              // end row
              .row
                .col-sm-6
                  .form-group
                    label Descripció
                    textarea.form-control(type='text', name="Descripcio", required='')
                // end columns
                .col-sm-6
                  .form-group
                    label Categoria
                    select.form-control(name='categoria_id' required='')
                      each categoria in categories
                        option(value=categoria.id) #{categoria.Titol}
                    i.fa.fa-angle-down
                    input.form-control(name='Valoracio',type='hidden', value=0)
                    input.form-control(name='Vots',type='hidden', value=0)
                    input.form-control(name='establiment_id',type='hidden', value=establiment.id)
                // end columns
              // end row
            // end personal-info
            .lg-booking-form-heading
              span 
                i.fa.fa-photo
              h3 Fotos del Room Scape
            // end lg-bform-heading  
            .form-group
              input.form-control(type='file', name='foto' multiple)
            br
            .checkbox
              label
                input(type='checkbox' required='')
                |  He llegit i Accepto els
                a(href='#') Termes i Condicions.
            // end checkbox
            button.btn.btn-orange(type='submit') Donar d'alta el Room Scape
        // end columns
      // end row
    // end container
  // end flight-booking
// end innerpage-wrapper

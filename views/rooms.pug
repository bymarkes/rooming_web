// ===== INNERPAGE-WRAPPER ====
section.innerpage-wrapper(style='background-color: #f1f2f2;')
  #team-page.innerpage-section-padding
    .container
      .row
        .col-sm-12
          .page-heading
            h2 Room Scapes
            hr.heading-line
          // end page-heading
          .row
            each room in rooms
              .col-xs-12.col-sm-6.col-md-4.col-lg-4
                .member-block-2.text-center(style='background-color: white;')
                  .member-img-2
                    each foto in fotos
                      if foto.room_id == room.id && foto.principal
                        img.img-responsive(src=foto.URL, alt='roomscape-img')
                    .member-name-2
                      h3 #{room.Nom}
                    // end member-name-2
                  // end member-img-2
                  .member-info-2
                    p
                      |#{room.Descripcio}
                    a.myButton(href='/room/'+room.id) Veure
                  // end member-info-2
                // end member-block-2
              // end columns
          // end row
        // end columns
      // end row
    // end container
  // end team-page
// end innerpage-wrapper

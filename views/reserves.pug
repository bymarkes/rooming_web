// ==== INNERPAGE-WRAPPER =====
section.innerpage-wrapper(style='background-color: #f1f2f2;')
      #dashboard.innerpage-section-padding
        .container
          .row(style='background-color:#fafafa; padding:20px;')
            .col-xs-12.col-sm-12.col-md-12.col-lg-12
              .dashboard-heading
                h2
                  span Reserves
              // end dashboard-heading
              .dashboard-wrapper
                .row
                  .col-xs-12.col-sm-2.col-md-2.dashboard-nav
                    ul.nav.nav-tabs.nav-stacked.text-center
                      li
                        a
                          span
                            i.fa.fa-briefcase
                          | Reserves
                      each room in rooms
                        li
                          a(href='#'+room.Nom)
                            span
                              i.fa.fa-home
                            | #{room.Nom}
                  // end columns
                  .col-xs-12.col-sm-10.col-md-10.dashboard-content.booking-trips
                    h2.dash-content-title Reserves Room
                    each room in rooms
                      h3(id=room.Nom) #{room.Nom}
                      .dashboard-listing.booking-listing
                        each reserva in room.Reserves
                          if reserva
                            .table-responsive
                              table.table.table-hover
                                tbody
                                  tr
                                    td.dash-list-icon.booking-list-date
                                      .b-date                               
                                        h3(id="dia"+reserva.id)
                                        p(id="mes"+reserva.id)
                                          script(type='text/javascript').
                                            //day
                                            var data = '#{reserva.Hora}'
                                            var field = data.split('-')
                                            var dia = field[2]
                                            var field2 = dia.split(' ')
                                            var dia2 = field2[0];
                                            document.getElementById("dia"+ "#{reserva.id}").innerHTML = dia2;
                                            //month
                                            var data = '#{reserva.Hora}'
                                            var field = data.split('-')
                                            var mes = field[1]
                                            var field2 = mes.split(' ')
                                            var mes2 = field2[0];
                                            switch (mes2) {
                                                case "01":
                                                    mes2="Gener"
                                                    break;
                                                case "02":
                                                    mes2="Febrer"
                                                    break;
                                                case "03":
                                                    mes2="Març"
                                                    break;
                                                case "04":
                                                    mes2="Abril"
                                                    break;
                                                case "05":
                                                    mes2="Maig"
                                                    break;
                                                case "06":
                                                    mes2="Juny"
                                                    break;
                                                case "07":
                                                    mes2="Juliol"
                                                    break;
                                                case "08":
                                                    mes2="Agost"
                                                    break;
                                                case "09":
                                                    mes2="Setembre"
                                                    break;
                                                case "10":
                                                    mes2="Octubre"
                                                    break;
                                                case "11":
                                                    mes2="Novembre"
                                                    break;
                                                case "12":
                                                    mes2="Desembre"
                                                    break;
                                            }
                                            document.getElementById("mes"+ "#{reserva.id}").innerHTML = mes2;
                                            console.log("tito");      
                                    td.dash-list-text.booking-list-detail
                                      h3 #{room.Nom}
                                      ul.list-unstyled.booking-info
                                        li
                                          span Dia/Hora Reserva:
                                          |  #{reserva.Hora}
                                        li
                                          span Persones:
                                          |  #{reserva.Persones}
                                        li
                                          span Import:
                                          |  #{reserva.Import} €
                                    td.dash-list-btn
                                      button.btn.btn-orange Cancel·lar
                        else
                          .table-responsive
                            table.table.table-hover
                              tbody
                                td.dash-list-text.booking-list-detail
                                    h3 No hi ha Reserves
                      // end table-responsive
                    // end booking-listings

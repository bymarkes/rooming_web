  #search-tabs-3.search-tabs
    .container
      .row
        .col-xs-12.col-sm-12.col-md-6.col-lg-6.no-pd-r
          ul.nav.nav-tabs
            li
              a(href='#flights', data-toggle='tab')
                span
                  i.fa.fa-search
                span.st-text Cercador

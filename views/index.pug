                            option(value='Lleida') Lleida
                            option(value='Girona') Girona
                            option(value='Tarragona') Tarragona
                          i.fa.fa-angle-down
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                          label Categoria
                          select.form-control(name='Categoria')
                            each categoria in categories
                              option(value=categoria.id) #{categoria.Titol}                          
                          i.fa.fa-angle-down
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                          label Participants
                          select.form-control(name='Participants')
                            option(selected='', value='2') 2
                            option(value='4') 4
                            option(value='6') 6
                            option(value='10') 10
                          i.fa.fa-angle-down
                      // end columns
                      .col-xs-12.col-sm-12.col-md-12
                        .form-group.right-icon
                          label Preu
                          br
                          br                          
                          input#range.slider-input(value='23',name='Preu')
                      // end columns
                      .col-xs-6.col-sm-6.col-md-6
                        .form-group.right-icon
                          label Valoració
                          #example
                          input#inputVal(name='Valoracio',type='hidden')

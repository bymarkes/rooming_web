// =============== ROOM OFFERS ===============
section#hotel-offers.section-padding
  .container
    .row
      .col-sm-12
        .page-heading
          h2 ELS NOSTRES ROOM SCAPES
          hr.heading-line
        // end page-heading
        #owl-hotel-offers.owl-carousel.owl-theme.owl-custom-arrow
          each room in rooms
            .item
              .main-block.hotel-block
                .main-img
                  a(href='/room/'+room.id)
                    // IMATGE
                    each foto in fotos
                      if foto.room_id == room.id && foto.principal
                        img.img-responsive(src=foto.URL, alt='roomscape-img')
                  .main-mask
                    ul.list-unstyled.list-inline.offer-price-1
                      li.price
                        | #{room.Preu} €
                        span.divider |
                        span.pkg PER PERSONA
                      li.rating
                        span
                          i.fa.fa-star.orange
                        span
                          i.fa.fa-star.orange
                        span
                          i.fa.fa-star.orange
                        span
                          i.fa.fa-star.orange
                        span
                          i.fa.fa-star.lightgrey
                  // end main-mask
                // end offer-img
                .main-info.hotel-info
                  .arrow
                    a(href='/room/'+room.id)
                      span
                        i.fa.fa-angle-right
                  // end arrow
                  .main-title.hotel-title
                    a(href='/room/'+room.id) #{room.Nom}
                    p #{room.Descripcio}
                  // end hotel-title
                // end hotel-info
              // end hotel-block
            // end item
        // end owl-hotel-offers
        .view-all.text-center
          a.btn.btn-orange(href='/rooms') Veure m&eacute;s
        // end view-all
      // end columns
    // end row
  // end container
// end hotel-offers

// ==== INNERPAGE-WRAPPER =====
section.innerpage-wrapper(style='background-color: #f1f2f2;')
  .innerpage-section-padding
    .container
      .row
        .col-xs-12.col-sm-12.col-md-3.side-bar.left-side-bar
          .side-bar-block.booking-form-block
            h2.selected-price
              |#{room.Preu}&euro; 
              span Persona
          button.btn.btn-orange Reserva
          // end side-bar-block
          .row
            .col-xs-12.col-sm-6.col-md-12
              .side-bar-block.main-block.ad-block
              // end side-bar-block
            // end columns
            .col-xs-12.col-sm-6.col-md-12
              .side-bar-block.support-block(style='background-color: white;')
                h3 Contacte amb nosaltres
                p
                  | Lorem ipsum dolor sit amet, ad duo fugit aeque fabulas, in lucilius prodesset pri. Veniam delectus ei vis. Est atqui timeam mnesarchum.
                .support-contact
                  span
                    i.fa.fa-phone
                  p #{establiment.Telefon}
                // end support-contact
              // end side-bar-block
            // end columns
          // end row
        // end columns
        .col-xs-12.col-sm-12.col-md-9.col-lg-9.content-side
          .detail-slider
            .feature-slider
              div
                img.img-responsive(src='images/car-feature-1.jpg', alt='feature-img')
              div
                img.img-responsive(src='images/car-feature-2.jpg', alt='feature-img')
              div
                img.img-responsive(src='images/car-feature-3.jpg', alt='feature-img')
              div
                img.img-responsive(src='images/car-feature-4.jpg', alt='feature-img')
              div
                img.img-responsive(src='images/car-feature-5.jpg', alt='feature-img')
            // end feature-slider
            .feature-slider-nav
              div
                img.img-responsive(src='images/car-feature-thumb-1.jpg', alt='feature-thumb')
              div
                img.img-responsive(src='images/car-feature-thumb-2.jpg', alt='feature-thumb')
              div
                img.img-responsive(src='images/car-feature-thumb-3.jpg', alt='feature-thumb')
              div
                img.img-responsive(src='images/car-feature-thumb-4.jpg', alt='feature-thumb')
              div
                img.img-responsive(src='images/car-feature-thumb-5.jpg', alt='feature-thumb')
            // end feature-slider-nav
            ul.list-unstyled.features.tour-features
              li
                .f-icon
                  i.fa.fa-user
                .f-text
                  p.f-heading Persones
                  p.f-data #{room.Persones}
              li
                .f-icon
                  i.fa.fa-clock-o
                .f-text
                  p.f-heading Duracio
                  p.f-data #{room.Duracio} min
              li
                .f-icon
                  i.fa.fa-percent
                .f-text
                  p.f-heading Categoria
                  p.f-data #{categoria}
          // end detail-slider
          .detail-tabs
            .tab-content
              #car-information.tab-pane.in.active(style='background-color: white;')
                .row
                  .col-sm-4.col-md-4.tab-img
                    img.img-responsive(src='images/car-detail-tab-1.jpg', alt='flight-detail-img')
                  // end columns
                  .col-sm-8.col-md-8.tab-text
                    h3 #{room.Nom}
                    p
                      | #{room.Descripcio}
            .tab-content
              #car-information.tab-pane.in.active(style='background-color: white; margin-top:20px;')
                h2 Comentaris               
                .row
                  each comentari in comentaris
                    .col-sm-12.col-md-12.tab-text.tab-pane(style='margin-top:20px;')
                      p(style='color:black;') #{comentari.Usuari}
                      h4 #{comentari.Titol}    
                      p
                        | #{comentari.Text}
            if nick
            .tab-content
              #car-information.tab-pane.in.active(style='background-color: white; margin-top:20px;')
                h2 Deixa el teu comentari
                form(method='post', action='/comentari')
                  .form-group
                    .input-group
                      input.form-control.input-lg(type="hidden" name="Usuari" value=nick style='color:black; margin-bottom:10px;') 
                      input.form-control.input-lg(type="hidden" name="room_id" value=room.id style='margin-bottom:10px;')                       
                      input.form-control.input-lg(name="Titol" value="" style='margin-bottom:10px;' placeholder='Titol' required='')                       
                      textarea.form-control.input-lg(name="Text", cols="100", rows="4", type='text', placeholder='Escriu el teu comentari', required='')
                      button.btn.btn-orange(type='submit' style="margin-top:20px") ENVIA
                  // end columns
                // end row
              // end car-information
            // end tab-content
          // end detail-tabs
        // end row
      // end container
    // end car-detail
// end innerpage-wrapper

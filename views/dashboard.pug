// ===== INNERPAGE-WRAPPER ====
section.innerpage-wrapper(style='background-color: #f1f2f2;')
  #dashboard
    .container
      .row
        .col-xs-12.col-sm-12.col-md-12
          .dashboard-heading
            br
            br
            h2
              | Dashboard 
              span Pro
          // end dashboard-heading
          #dashboard-tabs
            .dashboard-content
              h2.dash-content-title Estadístiques Totals
              .row.info-stat
                .col-sm-6.col-md-3
                  .stat-block
                    span
                      i.fa.fa-home
                    h3 #{totalRooms}
                    p Rooms
                  // end stat-block
                // end columns
                .col-sm-6.col-md-3
                  .stat-block
                    span
                      i.fa.fa-building
                    h3 #{totalEstabliments}
                    p Establiments
                  // end stat-block
                // end columns
                .col-sm-6.col-md-3
                  .stat-block
                    span
                      i.fa.fa-user
                    h3 #{totalUsuaris}
                    p Usuaris
                  // end stat-block
                // end columns
                .col-sm-6.col-md-3
                  .stat-block
                    span
                      i.fa.fa-tag
                    h3 #{totalCategories}
                    p Categories
                  // end stat-block
                // end columns
              // end row
            .innerpage-section-padding
              ul.nav.nav-tabs.nav-justified
                li.active
                  a(href='#dsh-room', data-toggle='tab')
                    span
                      i.fa.fa-home
                    | Rooms
                li
                  a(href='#dsh-establiment', data-toggle='tab')
                    span
                      i.fa.fa-building
                    | Establiments
                li
                  a(href='#dsh-usuari', data-toggle='tab')
                    span
                      i.fa.fa-user
                    | Usuaris
                li
                  a(href='#dsh-categoria', data-toggle='tab')
                    span
                      i.fa.fa-tag
                    | Categories
                li
                  a(href='#dsh-comentari', data-toggle='tab')
                    span
                      i.fa.fa-comment
                    | Comentaris
                li
                  a(href='#dsh-fotos', data-toggle='tab')
                    span
                      i.fa.fa-photo
                    | Fotografies
              .tab-content
                #dsh-room.tab-pane.in.active.fade
                  .dashboard-content
                    .dashboard-listing.invoices
                      h3.dash-listing-heading Room Escapes
                      .table-responsive
                        table.table.table-hover
                          tbody
                            each room in rooms
                              tr
                                td.dash-list-icon.invoice-icon
                                  i.fa.fa-home
                                td.dash-list-text.invoice-text
                                  h4.invoice-title #{room.Nom}
                                  ul.list-unstyled.list-inline.invoice-info
                                    each categoria in categories
                                      if categoria.id == room.categoria_id
                                        li.invoice-status.green #{categoria.Titol}
                                    li.invoice-order  #{room.Preu}€
                                    each establiment in establiments
                                      if establiment.id == room.establiment_id
                                        li.invoice-date  #{establiment.Nom}
                                td.dash-list-btn
                                  button.btn.btn-orange(style="background-color:red") Eliminar
                      // end table-responsive
                    // end invoices
                  // end dashboard-content
                // end dsh-room
                #dsh-establiment.tab-pane.fade
                  .dashboard-content
                    .dashboard-listing.invoices
                      h3.dash-listing-heading Establiments
                      .table-responsive
                        table.table.table-hover
                          tbody
                            each establiment in establiments
                              tr
                                td.dash-list-icon.invoice-icon
                                  i.fa.fa-building
                                td.dash-list-text.invoice-text
                                  h4.invoice-title #{establiment.Nom}
                                  ul.list-unstyled.list-inline.invoice-info
                                    li.invoice-order  #{establiment.Poblacio}
                                    li.invoice-date  #{establiment.Provincia}
                                td.dash-list-btn
                                  button.btn.btn-orange(style="background-color:red") Eliminar
                // end dsh-establiment
                #dsh-usuari.tab-pane.fade
                  .dashboard-content
                    .dashboard-listing.invoices
                      h3.dash-listing-heading Usuaris
                      .table-responsive
                        table.table.table-hover
                          tbody
                            each usuari in usuaris
                              tr
                                td.dash-list-icon.invoice-icon
                                  i.fa.fa-user
                                td.dash-list-text.invoice-text
                                  h4.invoice-title #{usuari.Nom}
                                  ul.list-unstyled.list-inline.invoice-info
                                    li.invoice-order  #{usuari.Poblacio}
                                    li.invoice-date  #{usuari.Email}
                                td.dash-list-btn
                                  button.btn.btn-orange(style="background-color:red") Eliminar
                // end dsh-usuari
                #dsh-categoria.tab-pane.fade.dashboard-content
                  .dashboard-listing.invoices
                    h3.dash-listing-heading Categories
                    .table-responsive
                      table.table.table-hover
                        tbody
                          each categoria in categories
                            tr
                              td.dash-list-icon.invoice-icon
                                i.fa.fa-tag
                              td.dash-list-text.invoice-text
                                h4.invoice-title #{categoria.Titol}
                                ul.list-unstyled.list-inline.invoice-info
                                  li.invoice-order  #{categoria.Descripcio}
                              td.dash-list-btn
                                button.btn.btn-orange(style="background-color:red") Eliminar 
                  br
                  form(action="/categoria", method="POST")
                    .personal-info
                      .row
                        .col-sm-2
                          .form-group
                            label Titol de la Categoria
                            input.form-control(type='text', name="Titol",  required='')
                        // end columns
                        .col-sm-4
                          .form-group
                            label Descripció
                            textarea.form-control(type='text', name="Descripcio", required='')
                        .col-sm-2
                          .form-group
                            label Selecciona una foto
                            input.form-control(type='file')
                        .col-sm-4
                          .form-group
                            label .
                            button.btn.btn-orange.btn-block(type='submit') Afegir Categoria
                      // end columns
                    // end row
                // end dsh-categoria
                #dsh-comentari.tab-pane.fade
                  .dashboard-content
                    .dashboard-listing.invoices
                      h3.dash-listing-heading Comentaris
                      .table-responsive
                        table.table.table-hover
                          tbody
                            each room in rooms
                              each comentari in room.Comentari
                                tr
                                  td.dash-list-icon.invoice-icon
                                    i.fa.fa-comment
                                  td.dash-list-text.invoice-text
                                    h4.invoice-title #{comentari.Titol}
                                    ul.list-unstyled.list-inline.invoice-info
                                      li.invoice-order  #{comentari.Text}
                                      li.invoice-date  #{comentari.Usuari}
                                      li.invoice-date  #{comentari.Data}
                                      each room in rooms
                                        if room.id == comentari.room_id
                                          li.invoice-status.green  #{room.Nom}                                                                                           
                                  td.dash-list-btn
                                    button.btn.btn-orange(style="background-color:red") Eliminar
                #dsh-fotos.tab-pane.fade
                  .dashboard-content
                    .dashboard-listing.invoices
                      h3.dash-listing-heading Comentaris
                      .table-responsive
                        table.table.table-hover
                          tbody
                            each foto in fotos
                              tr
                                td.invoice-icon
                                  img(src=foto.URL, alt="foto", style="max-width:100px;")
                                td.dash-list-text.invoice-text
                                  h4.invoice-title #{foto.URL}                                                                        
                                td.dash-list-btn
                                  button.btn.btn-orange(style="background-color:red") Eliminar
              // end comentari
            // end tab-content
          // end dashboard-tabs
        // end columns
      // end row
    // end container
  // end contact-us
// end innerpage-wrapper

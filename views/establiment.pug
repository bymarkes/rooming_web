// ==== INNERPAGE-WRAPPER =====
section.innerpage-wrapper(style='background-color: #f1f2f2;')
  .innerpage-section-padding
    .container
      .row
        .col-xs-12.col-sm-12.col-md-2.side-bar.left-side-bar
          
        .col-xs-12.col-sm-12.col-md-9.col-lg-9.content-side
          .detail-tabs
              .tab-content
                #car-information.tab-pane.in.active(style='background-color: white;')
                  .row
                    .col-sm-8.col-md-8.tab-text
                      h1 #{establiment.Nom}
                      h4
                        | #{establiment.Provincia}, #{establiment.Poblacio}
                      p
                        | Lorem ipsum dolor, sit amet consectetur adipisicing elit. Doloremque fuga repudiandae veniam dolores? Consectetur voluptate placeat beatae, maxime quod sit exercitationem perspiciatis porro impedit veniam, dolore, autem neque veritatis nesciunt.
                    // end columns
                  // end row
                // end car-information
          .detail-slider
            .feature-slider
              each foto in fotos
                if foto.establiment_id == establiment.id
                  div
                    img.img-responsive(src=foto.URL, alt='')
            // end feature-slider
            .feature-slider-nav
              each foto in fotos
                if foto.establiment_id == establiment.id
                  div
                    img.img-responsive.img-thumb(src=foto.URL, alt='')
            // end feature-slider-nav
          // end detail-slider
          .row
            .col-sm-12
              .page-heading
                br
                h2 Room Scapes
                hr.heading-line
              // end page-heading
              .row
                each room in rooms
                  .col-xs-12.col-sm-6.col-md-4.col-lg-4
                    .member-block-2.text-center(style='background-color: white;')
                      .member-img-2
                        each foto in fotos
                          if foto.room_id == room.id && foto.principal
                            img.img-responsive(src=foto.URL, alt='roomscape-img')
                        .member-name-2
                          h3 #{room.Nom}
                        // end member-name-2
                      // end member-img-2
                      .member-info-2
                        p
                          |#{room.Descripcio}
                        a.myButton(href='/room/'+room.id) Veure
                      // end member-info-2
                    // end member-block-2
                  // end columns
                if usuari
                  if establiment.usuari_id == usuari.id
                    .col-xs-12.col-sm-6.col-md-12.col-lg-12
                      .text-center
                        a.btn.btn-orange(href="/room/new") AFEGEIX UN ROOM
              // end row
            // end tab-content
          // end detail-tabs
        // end row
      // end container
    // end car-detail
// end innerpage-wrapper
